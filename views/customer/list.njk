{% extends 'layout.njk' %}

{% block content %}

<div class="table">

    <a class='lb' href="customer/create">Novo Cliente</a>

    <table width="100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            {% for customer in customer %}

            <tr>
                <td>{{customer.name}}</td>
                <td>{{customer.email}}</td>
                <td>{{customer.tel}}</td>
                <td><a href="/customer/{{customer.id}}">ver</a></td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}