{% extends 'layout.njk'%}

{% block content %}

<div class="card">
    <section class='img' style = "background: url({{ salesman.avatar_url }}) no-repeat  center center / cover">

    </section>
    <section class="data">
        
        <h3>Detalhes</h3>
        <div class="item">
            <div>Nome</div>
            <div> {{ salesman.name }}</div>
        </div>

         <div class="item">
            <div>Email</div>
            <div>{{ salesman.email }}</div>
        </div>

         <div class="item">
            <div>Telefone</div>
            <div>{{ salesman.tel}}</div>
        </div>
        
        <div class="b">
            <a class='pbt' href="/salesman/{{ salesman.id }}/edit" class='button'>Editar</a>
        </div>

        
    </section>
</div>
{% endblock %}