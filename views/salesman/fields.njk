<div class="item">
            <div>Foto url</div>
            <div>
                <input 
                    type="url"
                    name ="avatar_url"
                    placeholder="http://"
                    value="{{salesman.avatar_url}}"
                >
            </div>
        </div>
        
        <div class="item">
            <div>Nome</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Nome do vendedor"
                    value="{{salesman.name}}"
                >
            </div>
        </div>

         <div class="item">
            <div>Email</div>
            <div>
                <input 
                type="text"
                name="email"
                placeholder="Email"
                value="{{salesman.email}}"
                >
            </div>
        </div>

         <div class="item">
            <div>Telefone</div>
            <div>
                <input 
                type="text"
                name="tel"
                placeholder="Telefone"
                value="{{salesman.tel}}"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>
        
        