{% extends 'layout.njk' %}

{% block content %}

<div class="table">

    <a class='lb' href="/salesman/create">Novo Vendedor</a>

    <table width="100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Qtd. Clientes</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            {% for salesman in salesman %}

            <tr>
                <td>{{salesman.name}}</td>
                <td>{{salesman.email}}</td>
                <td>{{salesman.tel}}</td>
                <td>{{salesman.total_customers}}</td>
                <td><a href="/salesman/{{salesman.id}}">ver</a></td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}